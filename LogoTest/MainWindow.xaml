        <StackPanel Orientation="Vertical">
            <StackPanel Margin="5" Orientation="Horizontal">
                <Button Click="Light10_Click" Content="Light 10" />
                <Button Click="Dark10_Click" Content="Dark 10" />
                <Button Click="Light11_Click" Content="Light 11" />
                <Button Click="Save_Click" Content="SAVE" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Button Click="Size16_Click" Content="16" />
