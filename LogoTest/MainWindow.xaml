                <Button Click="Size64_Click" Content="64" />
                <Button Click="Size128_Click" Content="128" />
                <!--<Button Click="Save_Click" Content="Save" />-->
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock MinWidth="60" Text="Shadow" />
                <Slider
                    x:Name="ShadowSlider"
                    Width="50"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    IsSnapToTickEnabled="True"
                    Maximum="5"
                    Minimum="0"
                    SmallChange="1"
                    Value="5" />
                <TextBlock Margin="5,0,0,0" Text="{Binding ElementName=ShadowSlider, Path=Value}" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
