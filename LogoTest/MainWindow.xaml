                    Maximum="4"
                    Minimum="0"
                    SmallChange="1"
                    Value="1" />
                <TextBlock Margin="5,0,0,0" Text="{Binding ElementName=BorderSlider, Path=Value}" />
            </StackPanel>
            <TextBlock Margin="5,0,0,0" Text="Hover to see the number" />

